[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=tab
tab_width=2

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=4

[{*.jhm,*.xslt,*.xul,*.rng,*.xsl,*.xsd,*.ant,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=space
indent_size=4

[{.babelrc,.prettierrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=2

[*.css]
indent_style=space
indent_size=4

[.editorconfig]
indent_style=space
indent_size=4

[*.scss]
indent_style=space
indent_size=2

[*.js]
indent_style=space
indent_size=4

[{*.ats,*.ts}]
indent_style=space
indent_size=4

[*.vue]
indent_style=space
indent_size=4

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=2

